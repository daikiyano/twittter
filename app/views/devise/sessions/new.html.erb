<div class="header" style="width:100%; height:800px; ">
  <%= video_tag("memoryofawoman.mp4", :autoplay => true, :loop => true, muted: true,style: "width:100%; position:absolute;") %>
    <div style="width:300px; position:absolute; border:2px solid black; opacity:0.8; background-color:#EEEEEE; border-radius:10px; margin-top:200px; margin-left:900px; box-shadow: 10px 10px 5px #444444; ">
            <h2 class="title is-2">Log in</h2>

            <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <div class="control">
              <%= f.input :email,
                          required: true,
                          autofocus: true ,input_html: {class:"input"},wrapper: false, label_html: {class: "label"},
                          input_html: { autocomplete: "email" } %>
              </div>
            </div>
            <div class="field">
              <div class="control">
                <%= f.input :password,
                            required: false, input_html: {class:"input"},wrapper: false, label_html: {class: "label"},
                            input_html: { autocomplete: "current-password" } %>
              </div>
            </div>

                <%= f.input :remember_me,wrapper: false, as: :boolean if devise_mapping.rememberable? %>

              <div class="form-actions">
                <%= f.button :submit, "Log in", class:"button is-dark is-medium" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
    </div>
</div>
